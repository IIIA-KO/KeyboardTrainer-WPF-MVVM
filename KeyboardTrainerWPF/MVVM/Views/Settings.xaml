<UserControl
    x:Class="KeyboardTrainerWPF.MVVM.Views.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:KeyboardTrainerWPF.MVVM.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:KeyboardTrainerWPF.MVVM.ViewModels"
    x:Name="window"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <viewModel:SettingsViewModel />
    </UserControl.DataContext>

    <Grid Background="#1B262C">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>

        <GroupBox
            Grid.Row="0"
            Foreground="White"
            Header="Complexity">
            <Slider
                Margin="20"
                IsSnapToTickEnabled="True"
                Maximum="3"
                Minimum="1"
                Value="{Binding Complexity, Mode=TwoWay}" />
        </GroupBox>

        <GroupBox
            Grid.Row="1"
            Foreground="White"
            Header="Verification">
            <StackPanel Orientation="Horizontal">
                <Button
                    Width="100"
                    Height="40"
                    Margin="30,0,0,0"
                    Background="LightGray"
                    Command="{Binding LoginCommand}"
                    Content="Log In" />
                <Button
                    Width="100"
                    Height="40"
                    Margin="20,0,0,0"
                    Background="Yellow"
                    Command="{Binding SignUpCommand}"
                    Content="Sign Up" />
                <Button
                    Width="100"
                    Height="40"
                    Margin="20,0,0,0"
                    Background="Transparent"
                    Command="{Binding LogOutCommand}"
                    Content="Log Out"
                    Foreground="Red" />
            </StackPanel>
        </GroupBox>

        <GroupBox
            Grid.Row="2"
            Foreground="White"
            Header="Appereance" />

        <Grid Grid.Row="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Button
                    Width="100"
                    Height="40"
                    Margin="0,0,20,0"
                    HorizontalAlignment="Right"
                    Background="Lime"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding ElementName=window}"
                    Content="Save" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
